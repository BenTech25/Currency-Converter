<!DOCTYPE html>

<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <link rel="stylesheet" href="style.css"/>
        <title>Convert.com</title>
    </head>

    <body>
        <div id="centered">
            <h2 class="title">Convert Cash</h2>
            <div class="boite">
                <form action="/currencyAmount" method="POST">
                    <label>From :</label>
                    <br>
                    <div class="bloc">
                        <select name="fromCurrency">
                            <option>EUR</option>
                            <option>USD</option>
                            <option>JPY</option>
                            <option>GBP</option>
                            <option>AUD</option>
                            <option>CAD</option>
                            <option>CHF</option>
                            <option>CNY</option>
                            <option>SEK</option>
                            <option>MXN</option>
                            <option>NZD</option>
                            <option>SGD</option>
                            <option>HKD</option>
                            <option>NOK</option>
                            <option>KRW</option>
                            <option>TRY</option>
                            <option>INR</option>
                            <option>RUB</option>
                            <option>BRL</option>
                            <option>ZAR</option>
                            <option>DKK</option>
                            <option>PLN</option>
                            <option>TWD</option>
                            <option>THB</option>
                            <option>MYR</option>
                            <option>XOF</option>
                            <option>SAR</option>
                            <option>ARS</option>
                            <option>EGP</option>
                            <option>MAD</option>
                            <option>NGN</option>
                            <option>DZD</option>
                            <option>XAF/option>
                            <option>UAH</option>
                            <option>PKR</option>
                        </select>
                    </div>

                    <div class="space">
                        <label class="labeled">To :</label>
                        <div class="bloc">
                            <select name="toCurrency">
                                <option>USD</option>
                                <option>EUR</option>
                                <option>JPY</option>
                                <option>GBP</option>
                                <option>AUD</option>
                                <option>CAD</option>
                                <option>CHF</option>
                                <option>CNY</option>
                                <option>SEK</option>
                                <option>MXN</option>
                                <option>NZD</option>
                                <option>SGD</option>
                                <option>HKD</option>
                                <option>NOK</option>
                                <option>KRW</option>
                                <option>TRY</option>
                                <option>INR</option>
                                <option>RUB</option>
                                <option>BRL</option>
                                <option>ZAR</option>
                                <option>DKK</option>
                                <option>PLN</option>
                                <option>TWD</option>
                                <option>THB</option>
                                <option>MYR</option>
                                <option>XOF</option>
                                <option>SAR</option>
                                <option>ARS</option>
                                <option>EGP</option>
                                <option>MAD</option>
                                <option>NGN</option>
                                <option>DZD</option>
                                <option>XAF</option>
                                <option>UAH</option>
                                <option>PKR</option>
                            </select>
                        </div>
                    </div>

                    <div class="amount" class="bloc">
                        <label>Amount</label>
                        <input type="number" name="amout"/>
                    </div>
                    
                </form>
            </div>
            
            <div class="displayed">

                <% if (locals.final) { %>
                    <%= final.theamount %> <%= final.thefrom %> = <%= final.theresult %> <%= final.theto %>
                    <div> <p>Rate : 1 <%= final.thefrom %> = <%= final.therate %> <%= final.theto %> </p> </div>
                <% } %>

            </div>

            

        </div>
    </body>

</html>
